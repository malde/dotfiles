[user]
    name = malde
    email = git@malde.me
[includeIf "gitdir:/Users/malte/dev/webforms/"]
    path = /Users/malte/.gitconfig_monday
[includeIf "gitdir:/Users/malte/dev/monday_**"]
    path = /Users/malte/.gitconfig_monday
[core]
    autocrlf = input
    safecrlf = false
    excludesfile = /Users/malte/.gitignore_global
    editor = vi 
    trustctime = false
[commit]
    template = /Users/malte/.gitmessage
[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path = 
[mergetool "sourcetree"]
    cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
[color]
    ui = true
[help]
    autocorrect = 1
[alias]
    ll = "!git log --pretty=format:'%Cred%h%C(yellow)%d %Creset%s %Cgreen(%cr) %C(bold blue) <%cn>' --decorate --numstat"
    ls = "!git log --pretty=format:'%Cred%h%C(yellow)%d -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --graph --all"
    lsc = "!git log --pretty=format:'%Cred%h%C(yellow)%d -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --graph --first-parent \"$(git branch --show-current)\""
    standup = !git log --since yesterday --author ${1-$(git config user.email)} --pretty=short
    st = status -sb
    ignored = ls-files --others --i --exclude-standard
    co = checkout
    cm = commit
    ready = rebase -i @{u}
    fe = fetch -v
    undo = reset HEAD~1 --mixed
    purr = pull --rebase
[push]
    default = simple
[credential]
    helper = osxkeychain
[branch]
    autosetuprebase = always
[mergetool]
    keepBackup = true
[pull]
    rebase = true
[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX
    show = diff-so-fancy | less --tabs=4 -RFX 
[url "git@github.com:"]
	insteadOf = https://github.com/
