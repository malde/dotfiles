set term=xterm
set autoread
set ruler
set ignorecase
set noerrorbells
set expandtab
set smarttab
set tabstop=4
set number
set autoindent
set shiftround
set shiftwidth=4
set hlsearch    " enable search highlighting
set incsearch   " enable incremental search
set background=dark
set backspace=indent,eol,start
syntax enable
filetype indent plugin on
